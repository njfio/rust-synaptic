# Synaptic External Integrations Configuration
# Copy this file to .env and configure with your actual values

# Database Configuration
DATABASE_URL=postgresql://synaptic_user:synaptic_pass@localhost:11110/synaptic_db

# Redis Configuration  
REDIS_URL=redis://localhost:11111

# LLM API Keys (choose one or both)
# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT API (alternative)
# OPENAI_API_KEY=your_openai_api_key_here

# ML Models Configuration
MODELS_PATH=./models

# Optional: Visualization Configuration
VISUALIZATION_OUTPUT_DIR=./visualizations

# Optional: Performance Tuning
DATABASE_MAX_CONNECTIONS=10
REDIS_POOL_SIZE=5
ML_CACHE_SIZE=100

# Optional: Security
DATABASE_SSL_MODE=prefer
REDIS_TLS_ENABLED=false

# Optional: Logging
RUST_LOG=info
SYNAPTIC_LOG_LEVEL=info
